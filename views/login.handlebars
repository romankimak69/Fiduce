<script src="/js/login.js" defer></script>
<link rel="stylesheet" href="/css/login.css" />

<h1 class="page-header" style="text-align: center;">Espace client</h1>
{{#if errors}}
{{#each errors}}
<div class="alert alert-danger">{{msg}}</div>
{{/each}}
{{/if}}

<div class="alert alert-danger password-error hidden"></div>

<div class="col-md-6 col-centered" id="get-password">
  <form onsubmit=" return false">
    <div class="form-group">
      <label>Nom d'utilisateur</label>
      <input type="text" class="form-control get-pwd-username" name="username" placeholder="Nom d'utilisateur">
    </div>
    <input type="submit" style="float: right;" value="Obtenir le mot de passe"
      class="btn btn-default btn-outline-success getpassword-input"></input>
  </form>
</div>

<div class="col-md-6 col-centered hidden" id="login">
  <form method="post" id="login-form" action="/users/login">
    <div class="form-group">
      <label>Nom d'utilisateur</label>
      <input type="text" class="form-control username-input" name="username" placeholder="Nom d'utilisateur">
    </div>
    <div class="form-group">
      <label>Mot de passe</label>
      <input type="password" class="form-control" name="password" placeholder="Mot de passe">
    </div>
    <a href="/users/passwordreset">Mot de passe oubliÃ© ?</a>
    <input type="submit" style="float: right;" value="S'identifier" class="btn btn-default btn-outline-success"></input>
  </form>
</div>
